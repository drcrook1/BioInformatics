{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "DeploymentMode": {
      "type": "string",
      "allowedValues": [
        "Incremental",
        "Complete"
      ]
    },
    "TemplateBaseUri": {
      "type": "string"
    }
  },
  "variables": {
    "ResourceDeploymentApiVersion": "2015-01-01",
    "DataLakeTemplateUrl": "[concat(parameters('TemplateBaseUri'), '/datalake/deployment.json')]",
    "DataLakeParameterUrl": "[concat(parameters('TemplateBaseUri'), '/datalake/parameters.json')]",

    "IoTHubTemplateUrl": "[concat(parameters('TemplateBaseUri'), '/iothub/deployment.json')]",
    "IoTHubParameterUrl": "[concat(parameters('TemplateBaseUri'), '/iothub/parameters.json')]",

    "ServiceBusQueueTemplateUrl": "[concat(parameters('TemplateBaseUri'), '/servicebusqueue/deployment.json')]",
    "ServiceBusQueueParameterUrl": "[concat(parameters('TemplateBaseUri'), '/servicebusqueue/parameters.json')]"
  },
  "resources": [
    {
      "apiVersion": "[variables('ResourceDeploymentApiVersion')]",
      "name": "DataLakeTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "[parameters('DeploymentMode')]",
        "templateLink": {
          "uri": "[variables('DataLakeTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[variables('DataLakeParameterUrl')]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": { }
}
