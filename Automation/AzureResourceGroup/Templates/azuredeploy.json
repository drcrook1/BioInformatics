{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "DeploymentMode": {
      "type": "string",
      "allowedValues": [
        "Incremental",
        "Complete"
      ]
    }
  },
  "variables": {
    "ResourceDeploymentApiVersion": "2015-01-01",
    "DataLakeTemplateUrl": "[uri(deployment().properties.templateLink.uri, '/datalake/deployment.json')]",
    "DataLakeParameterUrl": "[uri(deployment().properties.templateLink.uri, '/datalake/parameters.json')]",

    "IoTHubTemplateUrl": "[uri(deployment().properties.templateLink.uri, '/iothub/deployment.json')]",
    "IoTHubParameterUrl": "[uri(deployment().properties.templateLink.uri, '/iothub/parameters.json')]",

    "ServiceBusQueueTemplateUrl": "[uri(deployment().properties.templateLink.uri, '/servicebusqueue/deployment.json')]",
    "ServiceBusQueueParameterUrl": "[uri(deployment().properties.templateLink.uri, '/servicebusqueue/parameters.json')]"
  },
  "resources": [
    {
      "apiVersion": "[variables('ResourceDeploymentApiVersion')]",
      "name": "DataLakeTemplate",
      "type": "[parameters('DeploymentMode')]",
      "mode": "[parameters('DeploymentMode')]",
      "properties": {
        "templateLink": {
          "uri": "[variables('DataLakeTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[variables('DataLakeParameterUrl')]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": { }
}
