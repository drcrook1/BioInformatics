            </Canvas>
            <Border HorizontalAlignment="Center" MinWidth="300"  MaxWidth="500" MaxHeight="300"  >
                
            <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
